{
  "version": 2,
  "builds": [
    { "src": "frontend/static/**/*", "use": "@vercel/static" },
    { "src": "frontend/index.html", "use": "@vercel/static" },
    { "src": "backend/app.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(encrypt|decrypt)", "dest": "/backend/app.py" }
  ]
}
